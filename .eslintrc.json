{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
					"eslint:recommended",
					"plugin:prettier/recommended",
					"plugin:@wordpress/eslint-plugin/recommended",
					"plugin:@wordpress/eslint-plugin/esnext"
				],
    "parserOptions": {
        "ecmaVersion": 12
    },
				"plugins": ["prettier"],
    "rules": {
					"prettier/prettier": ["error", {}, {
						"usePrettierrc": true
					}],
					"wrap-iife": ["error", "any"],
					"no-undef": 0,
					"space-before-function-paren": 0,
					"space-in-parens": ["error", "never"]
    }
}
